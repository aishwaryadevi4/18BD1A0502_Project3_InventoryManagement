<html lang="en">
    <head>
        <title>Pick-A-Book</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        
    </head>
    <body class="hold-transition sidebar-mini">
    
        <div class="wrapper">
            
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                                   <i class="fas fa-bars"></i></a>
                        </li>
                    <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Home</a>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->
            
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
                <a href="#" class="brand-link">
                    <img src="book-logo.jpg"
                    class="brand-image img-circle elevation-3">
                       <span class="brand-text font-weight-light">Pick-A-Book</span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                          <li class="nav-item">
                            <a href="/addproductpage" class="nav-link">
                              <i class="nav-icon far fa-circle text-info"></i>
                              <p>Add Product</p>
                            </a>
                          </li>
                          <li class="nav-item">
                            <a href="/deleteproductpage" class="nav-link">
                              <i class="nav-icon far fa-circle text-info"></i>
                              <p class="text">Delete product</p>
                            </a>
                          </li>
                          <li class="nav-item">
                            <a href="/updatestockpage" class="nav-link">
                              <i class="nav-icon far fa-circle text-info"></i>
                              <p class="text">Update Stock</p>
                            </a>
                          </li>
                          
                        </ul>
                    </nav>
                </div>
                <!-- /.sidebar -->
            </aside>
            
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                
                <section class="content-header">
                    <h1>Pick-A-Book Inventory Management System</h1>
                </section>
                
                <section class="content">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-body table-responsive p-0" style="height: 400px;">
                                <table class="table table-striped table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th style="width: 10%" >BookID</th>
                                        <th style="width: 10%" >Title</th>
                                        <th style="width: 10%" >Author</th>
                                        <th style="width: 10%" >Genre</th>
                                        <th style="width: 10%" >Stock</th>
                                        <th style="width: 10%" >Price</th>
                                        <th style="width: 20%" > </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%for(var i=0;i<data.length;i++) {%>
                                        <tr>
                                            <td><%= data[i].BookId%></td>
                                            <td><%= data[i].Title%></td>
                                            <td><%= data[i].Author%></td>
                                            <td><%= data[i].Genre%></td>
                                            <td>
                                                    <% if(data[i].Stock<50){%>
                                                        <div class="progress progress-xs">
                                                        <div class="progress-bar bg-danger" style="width:<%=data[i].Stock%>"></div>
                                                        </div>
                                                        <small><%= data[i].Stock %></small>
                                                        <%}%>
                                                    <% if(data[i].Stock>=50){%>
                                                        <div class="progress progress-xs">
                                                        <div class="progress-bar bg-info" style="width:<%=data[i].Stock%>"></div>
                                                        </div>
                                                        <small><%= data[i].Stock %></small>
                                                        <%}%>
                                            </td>
                                               
                                            <td><%= data[i].Price%></td>
                                            <td class="project-actions text-right">
                                                <a class="btn btn-info btn-sm" href="/updatestockpage"><i class="fas fa-pencil-alt"></i>Edit</a>
                                                <a class="btn btn-danger btn-sm" href="/deleteproductpage" ><i class="fas fa-trash"></i>Delete</a>
                                            </td>
                                        </tr>
                                        <%}%>
                                </tbody>
                                </table>
                                <br>
                                <a class="btn btn-primary btn-sm" href="/addproductpage" ><i class="fa fa-plus"></i> Add Book</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div> 
        </div>
    </body>
</html>